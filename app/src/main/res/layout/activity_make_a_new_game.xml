<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:background="@color/startBlue"
    tools:context=".Activities.MakeANewGame"
    android:orientation="vertical">


    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_game"
        android:textSize="38sp"
        android:layout_marginBottom="40dp"/>


    <!-- Select Sport -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_sport"
        android:textSize="22sp"
        android:textColor="@color/grayLight"/>

    <Spinner
        android:id="@+id/setSportSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <!-- Select Sport -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_capacity"
        android:textSize="22sp"
        android:textColor="@color/grayLight"/>

    <Spinner
        android:id="@+id/setSizeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <!-- Select Start Time -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_time"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/grayLight"/>

    <Button
        android:id="@+id/SelectStartTimeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/selectButton"
        android:text="@string/select_start_time"
        android:textSize="16sp"
        android:textColor="@android:color/background_light" />

    <!-- Select End Time -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/end_time"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/grayLight"/>

    <Button
        android:id="@+id/SelectEndTimeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/selectButton"
        android:text="@string/select_end_time"
        android:textSize="16sp"
        android:textColor="@android:color/background_light" />

    <!-- Select Location -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/enter_location"
        android:textSize="22sp"
        android:textColor="@color/grayLight"/>

    <!-- Enter Location here -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/field_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/location"
            android:textColor="@color/white"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>



    <!-- Add Game -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <Button
            android:id="@+id/createGameButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@color/greenButton"
            android:text="@string/add_game"
            android:layout_gravity="bottom|center_horizontal"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/cancelGameButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/warningRed"
            android:text="@string/cancel"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>